<h1> HELLO WORLD </h1>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Guess</th>
        <th scope="col">Actual</th>
        <th scope="col">Score</th>
        </tr>
    </thead>
    <tbody>
            <tr>
            <th scope="row"></th>
            <td><%= @guess %></td>
            <td><%= @artist_name %></td>
            <td><%= @score %></td>
            </tr>
    </tbody>

</table>

<img src=<%=@artist_img_url %>>

  <div class="row">
      <div class="col">
          <a href="/home">
            <button class="play_btn">Home</button>
          </a>
      </div>
      
      <div class="col">
          <a href="/scoreboard">
            <button class="play_btn">Scoreboard</button>
          </a>
      </div>  

      <div class="col">
        <a id="logout"><button class="play_btn">Logout </button></a>
      </div>

    </div>
</div>

<% if @confetti %>
<script type="text/javascript" src="../../app/assets/javascript/confetti.js"></script>
    <script>

        const start = () => {
            setTimeout(function() {
                confetti.start()
            }, 1000);
        };
        const stop = () => {
            setTimeout(function() {
                confetti.stop()
            }, 5000);
        };

        start();
        stop();
    </script>
<% end %>


